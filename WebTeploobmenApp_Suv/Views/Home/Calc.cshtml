@model HomeCalcViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    Операнд 1: @Model.Num1<br />
    Операнд 2: @Model.Num2<br />
    Тип операции: @Model.OperationTypeName<br />

    Результат расчета: @Model.Result
</div>


<div class="text-start">
    <form action="/home/calc" method="post">
        <div class="mb-3">
            <label for="num1" class="form-label">Операнд 1</label>
            <input type="text" name="model.num1" class="form-control" id="num1">
        </div>
        <div class="mb-3">
            <label for="num2" class="form-label">Операнд 2</label>
            <input type="text" name="model.num2" class="form-control" id="num2">
        </div>

        <div class="mb-3">
            <label class="form-label">Тип операции</label>
            <select name="model.operationType" class="form-control">
                <option value="1">Сложение</option>
                <option value="2">Вычитание</option>
                <option value="3">Умножение</option>
                <option value="4">Деление</option>
            </select>
        </div>
        <button class="btn btn-primary">Рассчитать</button>
    </form>
</div>